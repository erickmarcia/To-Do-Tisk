{
  "functions": {
    "source": "functions",
    "codebases": {
      "default": {
        "runtime": "nodejs20",
        "region": "us-central1",
        "memory": "512MiB",
        "timeoutSeconds": 60,
        "startupTimeoutSeconds": 300,
        "ignore": [
          "node_modules",
          ".git",
          "firebase-debug.log",
          "firebase-debug.*.log",
          "*.local",
          ".env",
          "dist"
        ],
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
        "environmentVariables": {
          "API_VERSION": "v1",
          "NODE_ENV": "production"
        },
        "invoker": "public"
      }
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
