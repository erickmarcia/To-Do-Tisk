{
  "name": "to-do-tisk",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for ToDo App",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --out-dir dist",
    "build:watch": "tsup src/index.ts --format cjs --dts --out-dir dist --watch",
    "dev": "npm run build:watch",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,auth",
    "serve:functions": "npm run build && firebase emulators:start --only functions",
    "emulators": "firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "deploy:prod": "npm run lint && npm run build && firebase deploy --only functions --project production",
    "delete:function": "firebase functions:delete",
    "logs": "firebase functions:log --project to-do-tisk",
    "logs:tail": "firebase functions:log --project to-do-tisk --follow",
    "firebase:login": "firebase login",
    "firebase:logout": "firebase logout",
    "firebase:list": "firebase projects:list",
    "firebase:use": "firebase use",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist node_modules/.cache",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "20"
  },
  "main": "dist/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-plugin-prettier": "^5.5.3",
    "firebase-tools": "^13.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.0",
    "typescript": "^5.1.6"
  },
  "private": true
}
